{
  "name": "mangler",
  "version": "0.0.1",
  "description": "Jeff's big bin of format mangling utilities.",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">18.14.0"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run compile",
    "test": "ava",
    "clean": "rm -rf ./dist;rm *.tsbuildinfo",
    "compile": "tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "prettier": {
    "editorconfig": true,
    "semi": true,
    "singleQuote": true,
    "indent_style": "space",
    "indent_size": 2,
    "bracketSpacing": true
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/https://github.com/eaton/mangler.git"
  },
  "author": "Jeff Eaton <jeff@autogram.is> (http://eaton.fyi/)",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cheerio-json-mapper": "^1.0.3",
    "date-fns": "^2.30.0",
    "entities": "^4.5.0",
    "fs-jetpack": "^5.1.0",
    "gray-matter": "^4.0.3",
    "html-to-text": "^9.0.5",
    "humanize-url": "^3.0.0",
    "jsdom": "^22.1.0",
    "linkify-urls": "^4.1.0",
    "marked": "^9.1.4",
    "object-hash": "^3.0.0",
    "textile-js": "^2.1.1",
    "turndown": "^7.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@contentful/rich-text-from-markdown": "^15.16.8",
    "@contentful/rich-text-html-renderer": "^16.3.0",
    "@contentful/rich-text-plain-text-renderer": "^16.0.7",
    "@portabletext/to-html": "^2.0.5",
    "@portabletext/toolkit": "^2.0.10",
    "@salesforce/ts-types": "^2.0.7",
    "@sanity/asset-utils": "^1.3.0",
    "@sanity/block-tools": "^3.19.0",
    "@sanity/schema": "^3.18.1",
    "@sanity/types": "^3.19.0",
    "@sindresorhus/is": "^6.0.0",
    "@types/html-to-text": "^9.0.2",
    "@types/jsdom": "^21.1.4",
    "@types/ndjson": "^2.0.3",
    "@types/node": "^20.2.5",
    "@types/object-hash": "^3.0.4",
    "@types/turndown": "^5.0.3",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "ava": "^5.3.1",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0"
  }
}
